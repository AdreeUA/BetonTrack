.map
	display block
	position relative

	&__init
		height 572px

		+below(xs)
			height 300px

	&__form
		width 670px
		position absolute
		z-index 10
		top 56px
		left 48%
		background-color rgba(#000, .8)
		box-shadow 0 5px 16px rgba(0, 0, 0, 0.19)
		padding 49px 60px 58px
		text-align center
		color #fff

		+below(md)
			width 500px
			font-size 25px
			padding 25px 36px 37px
		+below(sm)
			width 400px
			font-size 20px
		+below(xs)
			position static
			width 100%
			font-size 30px
			padding 25px 10px

	.form__title
		margin-bottom 15px

		+below(md)
			// font-size 30px

	&__input
		width 48%

		&:first-of-type
			margin-right 2%

		+below(xs)
			width 100%
			margin-right 0

	&__input
	&__area
		margin-bottom 17px

		+below(sm)
			font-size .6em

	&__btn
		min-width 100%

