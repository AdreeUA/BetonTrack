.btn
	display inline-block
	vertical-align top
	background-color $color-decor
	min-width 245px
	color #fff
	font-size 14px
	font-weight 500
	text-transform uppercase
	padding 19px 10px
	text-align center
	border-radius 30px
	transition all .25s

	&:hover
		background-color #ff9c00

	+below(xs)
		min-width auto
