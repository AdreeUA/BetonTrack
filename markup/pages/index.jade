doctype html
html(class="no-js", lang="ru")

    include ../../node_modules/bemto.jade/bemto
    include ../components/head/head
    include ../components/footer/footer
    include ../components/header/header
    include ../components/about/about
    include ../components/services/services
    include ../components/price/price
    include ../components/statement/statement
    include ../components/rent/rent
    include ../components/map/map
    include ../components/popup/popup

    head
        +head(head.defaults)

    body.page
        |%=symbols=%

        div.page__wrapper
            +header
            +about
            +services
            +price
            +statement
            +rent
            +map
            +popup._call
                +form#popup-call.popup
                    +e.H2.title Заказать звонок
                    +e.P.subtitle Укажите номер телефона и наш менеджер перезвонит вам
                    +e.INPUT.input(type="text" placeholder="Ваш телефон" name="phone" required)
                    +btn.BUTTON.__btn.map__btn(name="btn-call") Заказать звонок
                    input(type="hidden" name="formData" value="Заказали звонок")
            +popup
                +form#popup-consultation.popup
                    +e.H2.title Заказать консультацию
                    +e.P.subtitle Наш менеджер свяжется с Вами в ближайшее время
                    +e.INPUT.input(type="text" placeholder="Ваше имя" name="name" required)
                    +e.INPUT.input(type="text" placeholder="Ваш телефон" name="phone" required)
                    +btn.BUTTON.__btn(name="btn-consultation") получить консультацию
                    input(type="hidden" name="formData" value="Заказали консультацию")
            +popup
                +form#popup-rent.popup
                    +e.H2.title Заявка на аренду автобетононасоса
                    +e.P.subtitle Наш менеджер свяжется с Вами в ближайшее время
                    +e.INPUT.input(type="text" placeholder="Ваше имя" name="name" required)
                    +e.INPUT.input(type="text" placeholder="Ваш телефон" name="phone" required)
                    +e.TEXTAREA.area(placeholder="Комментарий" rows="3" name="message")
                    +btn.BUTTON.__btn.map__btn получить консультацию
                    input(type="hidden" name="formData" value="Заявка на аренду автобетононасоса")
            +popup
                +e.message.message Спасибо! Ваше сообщение отправлено

            +footer()

        //- script(src='https://maps.googleapis.com/maps/api/js?key=AIzaSyDjzmVRjkyN4l9SpSaPV2cLxOXeZIIro3M&callback=initMap' async defer)

        //- Main scripts. You can replace it, but I recommend you to leave it here

        script(src='%=static=%js/main%=hash=%%=min=%.js')
        script(src='https://maps.googleapis.com/maps/api/js?key=AIzaSyDjzmVRjkyN4l9SpSaPV2cLxOXeZIIro3M&callback=initMap' async defer)
